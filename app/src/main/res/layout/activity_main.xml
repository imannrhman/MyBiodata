<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <com.john.waveview.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff702e8c"
        wave:above_wave_color="@android:color/white"
        wave:blow_wave_color="@android:color/white"
        wave:progress="50"
        wave:wave_height="little"
        wave:wave_hz="normal"
        wave:wave_length="middle" />





    <RelativeLayout
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:padding="16dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="55dp"
            >
            <LinearLayout
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Nama" />

                    <EditText
                        android:editable="false"
                        android:hint="Iman Nurohman"
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"
                        android:ems="9" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ttl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="TTL" />

                    <EditText
                        android:editable="false"
                        android:hint="Bandung,09 Mei 2001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:ems="9" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/notel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="No Hp" />

                    <EditText
                        android:editable="false"
                        android:hint="087826470878"
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"
                        android:ems="9" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Alamat" />

                    <EditText
                        android:editable="false"
                        android:textSize="14dp"
                        android:hint="Baleendah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="9" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/jenkel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Jenkel" />

                    <EditText
                        android:editable="false"
                        android:hint="Laki-Laki"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="9" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/agama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Agama" />

                    <EditText
                        android:editable="false"
                        android:hint="Islam"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="9" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Pekerjaan" />

                    <EditText
                        android:editable="false"
                        android:hint="Pelajar"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="9" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="60dp"
        android:src="@drawable/userpic"
        app:civ_border_color="#ff702e8c"
        app:civ_border_width="2dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>